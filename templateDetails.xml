<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site" method="upgrade">
   <name>Shl2</name>
   <creationDate>2022-07-16</creationDate>
   <author>Bigriseinc</author>
   <authorEmail>bigrise@gmail.com</authorEmail>
   <authorUrl>https://bigrise.agency </authorUrl>
   <copyright>2022 Bigriseinc</copyright>
   <license>GNU/GPL</license>
   <version>1.0.0</version>
   <description>Template Shl2</description>
   <inheritable>1</inheritable>
   <files>
      <filename>index.php</filename>
      <filename>favicon.ico</filename>
      <filename>joomla.asset.json</filename>
      <filename>templateDetails.xml</filename>
      <folder>html</folder>
   </files>
   <media destination="templates/site/shl2" folder="media">
      <folder>js</folder>
      <folder>css</folder>
      <folder>scss</folder>
      <folder>images</folder>
   </media>
   <positions>
      <position>header</position>
      <position>menu</position>
      <position>content-top</position>
      <position>center-top</position>
      <position>center-bottom</position>
      <position>breadcrumbs</position>
      <position>pre-footer</position>
      <position>menu-footer</position>
      <position>footer</position>
      <position>sidebar-left</position>
      <position>sidebar-right</position>
   </positions>
   <languages folder="language">
      <language tag="en-GB">en-GB/tpl_shl2.ini</language>
      <language tag="de-AT">de-AT/tpl_shl2.ini</language>
      <language tag="en-GB">en-GB/tpl_shl2.sys.ini</language>
      <language tag="de-AT">de-AT/tpl_shl2.sys.ini</language>
   </languages>
   <config>
      <fields name="params">
         <fieldset name="header" label="TPL_SHL2_HEADER_OPTIONS">
            <field name="Site_Title" type="text" default="Title" label="TPL_SHL2_HEADER_OPTIONS_TITLE" description="TPL_SHL2_HEADER_OPTIONS_TITLE_DESCRIPTION" />
            <field name="Site_Town" type="text" default="Town" label="TPL_SHL2_HEADER_OPTIONS_TOWN" description="TPL_SHL2_HEADER_OPTIONS_TOWN_DESCRIPTION" />
            <field name="site_logo_Image" type="media" label="TPL_SHL2_HEADER_OPTIONS_LOGO" description="TPL_SHL2_HEADER_OPTIONS_LOGO_DESCRIPTION" />
         </fieldset>

      </fields>
   </config>
</extension>