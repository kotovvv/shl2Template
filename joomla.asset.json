{
  "$schema": "https://developer.joomla.org/schemas/json-schema/web_assets.json",
  "name": "shl2",
  "version": "4.0.0",
  "description": "This file contains details of the assets used by shl2",
  "license": "GPL-2.0-or-later",
  "assets": [
    {
      "name": "template.shl2.mainstyles",
      "description": "The default css style to use.",
      "type": "style",
      "uri": "style.css",
      "dependencies": [
        "fontawesome"
      ]
    },
    {
      "name": "template.shl2.scripts",
      "description": "The file containing the javascript for this template.",
      "type": "script",
      "uri": "main.js",
      "attributes" : {
        "defer": true
      },
      "dependencies": [
        "core"
      ]
    },
    {
      "name": "template.user",
      "description": "A file where a user can add their own css.",
      "type": "style",
      "uri": "user.css",
      "dependencies": [
        "template.shl2.mainstyles"
      ]
    },
    {
      "name": "template.bootstrap.style",
      "description": "bootstrap style",
      "type": "style",
      "uri": "bootstrap.min.css",
      "dependencies": [
        "template.shl2.mainstyles"
      ]
    },
    {
      "name": "searchtools",
      "type": "style",
      "uri": "system/searchtools/searchtools.min.css"
    },
    {
      "name": "fontawesome",
      "type": "style",
      "uri": "media/system/css/joomla-fontawesome.min.css"
    }
  ]
}
